<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lavender"
    tools:context=".Splash">


    <pl.droidsonroids.gif.GifTextView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/krishnaAnim"
        android:layout_marginTop="150dp"
        android:background="@drawable/krishnasplash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeTv"
        android:text="@string/sarathi"
        android:textColor="@color/gold"
        android:textSize="36sp"
        android:fontFamily="@font/samarkan"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/krishnaAnim"
        >

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ExtendedWelcome"
        android:textColor="@color/gold"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="5dp"
        android:fontFamily="@font/marko_one"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeTv"
        >

    </TextView>



</androidx.constraintlayout.widget.ConstraintLayout>