<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/spiritualui"
    tools:context=".activityPack.moodtrack.MoodTest">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/spiritualui"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/TestCV"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="20dp"
            app:cardBackgroundColor="@color/lavender"
            app:cardCornerRadius="28dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/TestImage"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/emotion"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/TestText"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/TestText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/samarkan"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Mood\nTest"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/TestImage"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/EmojisCV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:padding="20dp"
                app:cardBackgroundColor="@color/lavender"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/EmojisText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/marko_one"
                        android:gravity="center"
                        android:text="Select your mood today"
                        android:textColor="@color/white"
                        android:textSize="29dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/awesome"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/awesome" />

                        <ImageView
                            android:id="@+id/vibechecked"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/vibechecked" />

                        <ImageView
                            android:id="@+id/lovedit"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/lovedit" />

                        <ImageView
                            android:id="@+id/cool"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/cool" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/party"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/party" />

                        <ImageView
                            android:id="@+id/fun"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/fun" />

                        <ImageView
                            android:id="@+id/good"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/good" />

                        <ImageView
                            android:id="@+id/nice"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/nice" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/lol"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/lol" />

                        <ImageView
                            android:id="@+id/surprised"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/surprised" />

                        <ImageView
                            android:id="@+id/neutral"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/neutral" />

                        <ImageView
                            android:id="@+id/notsure"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/notsure" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/slightysad"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/slightlysad" />

                        <ImageView
                            android:id="@+id/sad"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/sad" />

                        <ImageView
                            android:id="@+id/dislike"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/dislike" />

                        <ImageView
                            android:id="@+id/notgood"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/notgood" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/veryangry"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/angry" />

                        <ImageView
                            android:id="@+id/angryandsad"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/angry_and_sad" />

                        <ImageView
                            android:id="@+id/unhappy"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/unhappy" />

                        <ImageView
                            android:id="@+id/cry"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/cry" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>