<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/spiritualui"
    tools:context=".mediPack.Breathingdes">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/c1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="20dp"
            android:padding="20dp"
            app:cardBackgroundColor="#B4D3B2"
            app:cardCornerRadius="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">


            <ImageView
                android:id="@+id/detailYogIv"
                android:layout_width="365dp"
                android:layout_height="298dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:src="@drawable/yogam"
                app:layout_constraintBottom_toTopOf="@+id/head"

                android:contentDescription="Breathing image">

            </ImageView>

            <TextView
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/marko_one"
                android:gravity="start"
                android:padding="15dp"
                android:text="@string/message"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/detailYogIv" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/c2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="20dp"
            app:cardBackgroundColor="@color/lavender"
            app:cardCornerRadius="28dp">

            <TextView
                android:id="@+id/descript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/marko_one"
                android:gravity="start"
                android:padding="15dp"
                android:text="@string/message"
                android:textColor="@color/off_white"
                android:textSize="22sp"
                android:textStyle="normal" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/c3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="20dp"
            app:cardBackgroundColor="@color/lavender"
            app:cardCornerRadius="28dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/how"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:fontFamily="@font/marko_one"
                    android:gravity="start"
                    android:padding="15dp"
                    android:layout_marginBottom="-35dp"
                    android:text="@string/message"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/howd" />

                <TextView
                    android:id="@+id/howd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/marko_one"
                    android:gravity="bottom"
                    android:layout_marginTop="-40dp"
                    android:padding="15dp"
                    android:text="@string/message"
                    android:textColor="@color/off_white"
                    android:textSize="20sp"
                    android:textStyle="normal" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/c4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:padding="15dp"
            app:cardBackgroundColor="#FF6961"
            app:cardCornerRadius="28dp">


            <TextView
                android:id="@+id/cautiond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/marko_one"
                android:gravity="start"
                android:padding="15dp"
                android:text="@string/message"
                android:textColor="@color/off_white"
                android:textSize="20sp"
                android:textStyle="normal" />


        </androidx.cardview.widget.CardView>

        <android.widget.Button
            android:id="@+id/watchBreathingExercisevideo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/buttonbackground"
            android:fontFamily="@font/marko_one"
            android:text="Watch Video"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
           >
        </android.widget.Button>

    </LinearLayout>


</ScrollView>