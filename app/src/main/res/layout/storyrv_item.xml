<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:padding="5dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp"
    app:cardBackgroundColor="@color/lavender"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/StoryIv"
            android:layout_width="390dp"
            android:layout_height="298dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:src="@drawable/krishna"

            >

        </ImageView>

        <TextView
            android:id="@+id/storyTitle_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="start|center"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:fontFamily="@font/marko_one"
            android:text="Lord Krishna"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/StoryIv" />

        <TextView
            android:id="@+id/storyDescTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="-5dp"
            android:layout_margin="5dp"
            android:fontFamily="@font/marko_one"
            android:gravity="start|center"
            android:text="Lord"
            android:textColor="#FAF9F6"
            android:textSize="24sp"
            android:textStyle="normal"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>

