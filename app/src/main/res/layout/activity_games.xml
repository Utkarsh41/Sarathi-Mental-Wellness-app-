<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background"
    tools:context=".gamepack.Games">


    <androidx.cardview.widget.CardView
        android:id="@+id/TitleCV"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@color/SarathiLavendar"
        app:cardCornerRadius="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/GamesImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/gamesimage"
                android:layout_marginLeft="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/GamesText"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/GamesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="@string/gamestitle"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/GamesImage"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Game1CV"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:padding="20dp"
        app:cardBackgroundColor="@color/SarathiLavendar"
        app:cardCornerRadius="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/Game2CV"
        app:layout_constraintTop_toBottomOf="@id/TitleCV">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/Game1Image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/game1image"
                android:layout_marginLeft="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/Game1Text"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Game1Text"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginRight="50dp"
                android:text="@string/game1text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/Game1Image"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Game2CV"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:padding="20dp"
        app:cardBackgroundColor="@color/SarathiLavendar"
        app:cardCornerRadius="28dp"
        app:layout_constraintLeft_toRightOf="@id/Game1CV"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TitleCV">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/Game2Image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/game2image"
                android:layout_marginLeft="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/Game2Text"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Game2Text"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginRight="50dp"
                android:text="@string/game2text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/Game2Image"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Game3CV"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:padding="20dp"
        app:cardBackgroundColor="@color/SarathiLavendar"
        app:cardCornerRadius="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/Game4CV"
        app:layout_constraintTop_toBottomOf="@id/Game1CV">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/Game3Image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/game3image"
                android:layout_marginLeft="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/Game3Text"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Game3Text"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginRight="50dp"
                android:text="@string/game3text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/Game3Image"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Game4CV"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:padding="20dp"
        app:cardBackgroundColor="@color/SarathiLavendar"
        app:cardCornerRadius="28dp"
        app:layout_constraintLeft_toRightOf="@id/Game3CV"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Game2CV">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/Game4Image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/game4image"
                android:layout_marginLeft="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/Game4Text"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Game4Text"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginRight="50dp"
                android:text="@string/game4text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/Game4Image"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Game5CV"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:padding="20dp"
        app:cardBackgroundColor="@color/SarathiLavendar"
        app:cardCornerRadius="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Game3CV">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/Game5Image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/game5image"
                android:layout_marginLeft="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/Game5Text"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Game5Text"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginRight="50dp"
                android:text="@string/game5text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/Game5Image"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>