<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background"
    tools:context=".MainActivity">


    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/imageSlider"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:iss_auto_cycle="true"
        android:padding="12dp"
        app:iss_period="5000"
        app:iss_corner_radius="18"
        app:iss_title_background="@drawable/gradient"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/howAreYourTv"
        app:iss_delay="4000">

    </com.denzcoskun.imageslider.ImageSlider>

<!--    <ImageView-->
<!--        android:layout_width="390dp"-->
<!--        android:layout_height="210dp"-->
<!--        android:id="@+id/imageSlider"-->
<!--        android:src="@drawable/krishna"-->
<!--       -->
<!--        >-->

<!--    </ImageView>-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quoteTv"
        android:text="@string/quote_of_the_day"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/off_white"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statesLL"

        android:gravity="center_horizontal">
    </TextView>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:id="@+id/mentalStateIv"
        android:src="@drawable/facescale"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/howAreYourTv"
        >

    </ImageView>

    <SeekBar
        android:id="@+id/seekbarForMstate"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mentalStateIv"
        android:layout_marginTop="20dp"
        android:progressTint="#ff4c4c">
    </SeekBar>

    <LinearLayout
        android:id="@+id/statesLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/seekbarForMstate"
        >
        <TextView
            android:id="@+id/sadTv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/off_white"
            android:layout_height="wrap_content"
            android:text="Sad"
            >

        </TextView><TextView
            android:id="@+id/normalTv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
        android:textStyle="bold"

        android:textAlignment="center"
            android:textColor="@color/off_white"
            android:layout_height="wrap_content"
            android:text="Normal"
            >

        </TextView>
        <TextView
            android:id="@+id/happyTv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textStyle="bold"

            android:textAlignment="center"
            android:textColor="@color/off_white"
            android:layout_height="wrap_content"
            android:text="Happy"
            >

        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/howAreYourTv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageSlider"
        android:textAlignment="center"
        android:textColor="@color/off_white"
        android:layout_height="wrap_content"
        android:text="How are your feeling today ?"
        >

    </TextView>


    <android.widget.Button
        android:id="@+id/exploreSarathiBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttonbackground"
        android:text="Explore Sarathi"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="bold">

    </android.widget.Button>





</androidx.constraintlayout.widget.ConstraintLayout>